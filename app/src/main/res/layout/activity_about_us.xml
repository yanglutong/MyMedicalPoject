<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <com.yang.mymedicalpoject.utils.MyTitleBar
        android:id="@+id/clude"
        app:titleText="关于我们"
        app:titleDrawable="@color/colorPrimary"
        app:titleSize="8sp"
        app:titleColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
    </com.yang.mymedicalpoject.utils.MyTitleBar>


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_below="@+id/clude"
        android:gravity="center_vertical"
        android:background="@drawable/bg_333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<ImageView
    android:id="@+id/img"
    android:layout_marginTop="30dp"
    android:scaleType="centerCrop"
    android:layout_centerHorizontal="true"
    android:src="@mipmap/ic_launcher"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_version_code"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text=""
            android:layout_below="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:textSize="15sp"
        android:id="@+id/tv_1"
        android:layout_below="@+id/rl"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="          医学考研，西医结合的每一个科目伴随真题试练，每一题也有详细的题文解析(文字解析，图片解析等)，做真题也会得心应手，在错题库找到自己的错误，并且能够克服！"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <TextView
        android:textSize="15sp"
    android:id="@+id/tv_2"
    android:layout_below="@+id/tv_1"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="15dp"
    android:text="         APP定制放送免费的名师视频，手把手教你如何面对考研真题，难题解析等，在个人中心能够直观的看到预期大学的最新消息以及往年分数线"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />


    <TextView
        android:gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_3"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:text="乐雨科技有限公司 版权所有\nCopying© 2017 HeNan LeYu com,.Itd All Rights Reserved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>