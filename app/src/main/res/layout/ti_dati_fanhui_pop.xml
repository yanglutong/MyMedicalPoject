<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@mipmap/tijiang"
        android:layout_centerHorizontal="true"/>
   <LinearLayout
       android:id="@+id/li1"
       android:layout_centerHorizontal="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"

       android:layout_below="@+id/img">
       <TextView
           android:textColor="#000"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="您本次做"/>
       <TextView
           android:id="@+id/gong"
           android:textColor="#000"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="2"/>
       <TextView
           android:textColor="#000"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="道题,"/>
       <TextView
           android:textColor="#000"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="做错了"/>
       <TextView
           android:id="@+id/cuo"
           android:textColor="#000"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="2"/>
       <TextView
           android:textColor="#000"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="道题,"/>
       <TextView
           android:textColor="#000"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="做对了"/>
       <TextView
           android:id="@+id/dui"
           android:textColor="#000"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0"/>
       <TextView
           android:textColor="#000"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="题"/>
   </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:layout_below="@+id/li1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:text="查看本次对题"
        android:textColor="#fff"
        android:background="@color/colororgin"
        android:id="@+id/kandui"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_below="@+id/kandui"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:text="查看本次错题"
        android:textColor="#fff"
        android:background="@color/colorbtnlogin"
        android:id="@+id/kancuo"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_below="@+id/kancuo"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:text="返回首页"
        android:textColor="@color/colorbtnlogin"
        android:background="@drawable/kuang"
        android:id="@+id/fanhuishouye"/>



</RelativeLayout>