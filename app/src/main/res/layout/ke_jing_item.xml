<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ke_jing_img"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/ke_jing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/ke_jing_img"
        android:text="dddd"
        android:textColor="#000" />

    <TextView
        android:id="@+id/ke_jing_lu"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_below="@+id/ke_jing_title"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/ke_jing_img"
        android:gravity="center_horizontal"
        android:text="陆续更新"
        android:textColor="@android:color/holo_orange_light" />

    <ImageView
        android:id="@+id/ke_shi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ke_jing_img"
        android:layout_toRightOf="@+id/ke_jing_img"
        />

    <TextView
        android:id="@+id/ke_shi_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ke_jing_img"
        android:layout_toRightOf="@+id/ke_shi"
        android:text="3" />

    <TextView
        android:id="@+id/ke_shi_kk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ke_jing_img"
        android:layout_toRightOf="@+id/ke_shi_num"
        android:text="课时" />

    <TextView
        android:id="@+id/ke_shi_yuan_fu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ke_jing_img"
        android:layout_toLeftOf="@+id/ke_shi_yuan"
        android:text="￥"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:id="@+id/ke_shi_yuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ke_jing_img"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"

        android:text="ff"
        android:textColor="@android:color/holo_orange_dark" />


</RelativeLayout>