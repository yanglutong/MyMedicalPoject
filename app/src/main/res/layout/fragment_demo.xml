<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragment.forumfragment.school.SchoolFragment">
    <com.google.android.material.tabs.TabLayout
        app:tabMode="scrollable"
        android:id="@+id/tabItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.google.android.material.tabs.TabLayout>
    <TextView
        android:id="@+id/school_lod"
        android:text="更多"
        android:layout_alignParentRight="true"
        android:textSize="25sp"
        android:background="@drawable/gengduo_shape"
        android:gravity="center"
        android:layout_alignTop="@+id/tabItem"
        android:layout_alignBottom="@+id/tabItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <View
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/tabItem"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ViewPager"
        android:layout_below="@+id/tabItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.viewpager.widget.ViewPager>
</RelativeLayout>